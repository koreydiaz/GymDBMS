<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane onMouseClicked="#refreshTable" prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.database.gymdbms_application.MemberController">
    <children>
        <Button layoutX="891.0" layoutY="31.0" mnemonicParsing="false" onAction="#switchToEmployees" prefHeight="28.0" style="-fx-background-color: #4672c4;" text="Employees" textFill="WHITE" />
        <Button layoutX="806.0" layoutY="31.0" mnemonicParsing="false" onAction="#switchToHome" prefHeight="28.0" prefWidth="62.0" style="-fx-background-color: #4672c4;" text="Home" textFill="WHITE" />
        <TableView fx:id="memberTable" layoutX="14.0" layoutY="81.0" onMouseClicked="#makeEdits" prefHeight="464.0" prefWidth="601.0">
            <columns>
                <TableColumn fx:id="member_ID" prefWidth="121.0" text="Member_ID" />
                <TableColumn fx:id="fName" prefWidth="156.0" text="First Name" />
            <TableColumn fx:id="lName" prefWidth="162.0" text="Last Name" />
            <TableColumn fx:id="birthDate" prefWidth="161.0" text="Birth Date" />
            </columns>
        </TableView>
        <Button layoutX="592.0" layoutY="554.0" mnemonicParsing="false" onAction="#addMember" text="+" />
        <Button layoutX="554.0" layoutY="554.0" mnemonicParsing="false" onAction="#deleteMember" prefHeight="25.0" prefWidth="25.0" text="-" />
        <Label layoutX="14.0" layoutY="13.0" text="Members Page">
            <font>
                <Font size="25.0" />
            </font>
        </Label>
        <TextField fx:id="keywordTextField" alignment="CENTER" layoutX="485.0" layoutY="47.0" onMousePressed="#searchForMember" prefHeight="25.0" prefWidth="130.0" promptText="Search by name " />
        <BarChart layoutX="635.0" layoutY="81.0" prefHeight="352.0" prefWidth="329.0">
            <xAxis>
                <CategoryAxis side="BOTTOM" />
            </xAxis>
            <yAxis>
                <NumberAxis side="LEFT" />
            </yAxis>
        </BarChart>
      <Button fx:id="updateButton" layoutX="485.0" layoutY="554.0" mnemonicParsing="false" onAction="#updateInfo" text="Update" />
    </children>
</AnchorPane>
